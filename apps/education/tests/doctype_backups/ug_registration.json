    "Relationship with Student": {
      "type": "dropdown",
      "options": ["Father", "Mother", "Spouse", "Other"]
    },
    "Address of the Nominee": { "type": "textarea" }
  },

  "Payment Details": {
    "application_fee": { "type": "number", "currency": true },
    "Currency": { "type": "text", "default": "INR" },
    "payment_status": {
      "type": "select",
      "options": ["Paid", "Pending", "Failed", "Refunded"]
    },
    "transaction_id": { "type": "text" },
    "payment_date": { "type": "datetime" },
    "payment_mode": {
      "type": "select",
      "options": ["Online", "DD", "Cash", "Bank Transfer", "UPI"]
    },
    "register year": { "type": "year" },
    "registered batch": { "type": "text" }
  }
